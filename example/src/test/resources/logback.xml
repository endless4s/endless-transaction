<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>utf-8</charset>
            <pattern>%-10d{mm:ss.SSS} %-5level %logger - %msg %X{JoinedMdc}%n</pattern>
        </encoder>
    </appender>

    <logger name="endless.transaction.example.app.akka.AkkaAccountsApp" level="DEBUG"/>
    <logger name="endless.transaction.example.app.pekko.PekkoAccountsApp" level="DEBUG"/>
    <logger name="endless.transaction.example" level="DEBUG"/>
    <logger name="endless.runtime.pekko.deploy" level="DEBUG"/>
    <logger name="org.apache.pekko" level="DEBUG"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="slick" level="WARN"/>
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>